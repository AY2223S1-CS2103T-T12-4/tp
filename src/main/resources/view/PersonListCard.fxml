<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<HBox id="cardPane" fx:id="cardPane" layoutX="10.0" layoutY="10.0" spacing="10.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <GridPane prefHeight="152.0" prefWidth="1323.0">
     <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="1092.0" minWidth="10.0" prefWidth="1092.0" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="686.0" minWidth="0.0" prefWidth="18.0" />
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="459.0" minWidth="10.0" prefWidth="213.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
       <VBox alignment="CENTER_LEFT" minHeight="105" minWidth="-Infinity" prefHeight="152.0" prefWidth="314.0">
         <padding>
           <Insets bottom="5" left="15" right="5" top="5" />
         </padding>
         <HBox alignment="CENTER_LEFT" spacing="5">
           <Label fx:id="id" styleClass="cell_big_label">
             <minWidth>
               <!-- Ensures that the label text is never truncated -->
               <Region fx:constant="USE_PREF_SIZE" />
             </minWidth>
           </Label>
           <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
               <opaqueInsets>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </opaqueInsets>
         </HBox>
         <FlowPane fx:id="tags" />
         <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
         <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
         <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
       </VBox>
         <VBox prefHeight="152.0" prefWidth="209.0" GridPane.columnIndex="2">
            <children>
               <Label fx:id="header" alignment="CENTER" text="\$header" />
               <Label fx:id="taskList" alignment="CENTER" text="\$taskList">
                  <stylesheets>
                     <URL value="@DarkTheme.css" />
                     <URL value="@Fonts.css" />
                     <URL value="@Extensions.css" />
                  </stylesheets>
               </Label>
            </children>
            <stylesheets>
               <URL value="@DarkTheme.css" />
               <URL value="@Extensions.css" />
               <URL value="@Fonts.css" />
            </stylesheets>
            <opaqueInsets>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </opaqueInsets>
         </VBox>
         <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#152fe5" height="144.0" stroke="BLACK" width="5.0" GridPane.columnIndex="1" />
      </children>
      <stylesheets>
         <URL value="@DarkTheme.css" />
         <URL value="@Extensions.css" />
         <URL value="@Fonts.css" />
      </stylesheets>
      <opaqueInsets>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </opaqueInsets>
   </GridPane>
   <stylesheets>
      <URL value="@Fonts.css" />
      <URL value="@DarkTheme.css" />
      <URL value="@Extensions.css" />
   </stylesheets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <opaqueInsets>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </opaqueInsets>
</HBox>
