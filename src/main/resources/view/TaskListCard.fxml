<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" minHeight="50.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
 <VBox>
   <HBox spacing="5">
     <Label fx:id="id" minWidth="-Infinity" styleClass="cell_big_label" />
     <Label fx:id="taskname" styleClass="cell_big_label" text="\$task" wrapText="true" />
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
   </HBox>
   <Label fx:id="date" styleClass="cell_small_label" text="\$date" wrapText="true" />
   <Label fx:id="time" styleClass="cell_small_label" text="\$time" wrapText="true" />
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
 </VBox>
   <stylesheets>
      <URL value="@Fonts.css" />
      <URL value="@Theme.css" />
      <URL value="@Extensions.css" />
   </stylesheets>
</HBox>
