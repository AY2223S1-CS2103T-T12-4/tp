<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" />
      <RowConstraints minHeight="200.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label fx:id="header" text="\$header" wrapText="true">
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin></Label>
      <VBox fx:id="cardPane" GridPane.rowIndex="1">
         <children>
            <GridPane>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="10.0" minWidth="10.0" prefWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox fx:id="personDetails" minWidth="100.0" prefWidth="200.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                           <opaqueInsets>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </opaqueInsets>
                           <children>
                              <Label fx:id="name" styleClass="cell_big_label" text="\$first" wrapText="true" />
                           </children>
                        </HBox>
                        <FlowPane fx:id="tags" />
                        <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" wrapText="true" />
                        <Label fx:id="address" styleClass="cell_small_label" text="\$address" wrapText="true" />
                        <Label fx:id="email" styleClass="cell_small_label" text="\$email" wrapText="true" />
                     </children>
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                  </VBox>
                  <HBox alignment="CENTER" GridPane.columnIndex="1">
                     <children>
                        <Separator orientation="VERTICAL" />
                     </children>
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                  </HBox>
                  <VBox fx:id="rightBox" GridPane.columnIndex="2">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <children>
                        <Label fx:id="conditions" styleClass="cell_small_label" text="\$conditions" wrapText="true" />
                        <Label fx:id="medications" styleClass="cell_small_label" text="\$medications" wrapText="true" />
                     </children>
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                  </VBox>
               </children>
            </GridPane>
            <Separator>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Separator>
            <VBox spacing="5.0">
               <children>
                  <Label fx:id="taskheader" styleClass="cell_small_label" text="\$taskheader" wrapText="true" />
                  <Label fx:id="tasklist" styleClass="cell_small_label" text="\$tasklist" wrapText="true" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</GridPane>
