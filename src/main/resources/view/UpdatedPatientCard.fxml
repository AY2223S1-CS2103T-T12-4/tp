<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane stylesheets="@Theme.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="30.0" minHeight="30.0" />
      <RowConstraints minHeight="50.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label fx:id="header" text="\$header" wrapText="true">
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin></Label>
      <VBox fx:id="cardPane" GridPane.rowIndex="1">
         <children>
            <GridPane>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="10.0" minWidth="10.0" prefWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="140.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox maxWidth="200.0" minWidth="100.0" prefWidth="200.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                           <children>
                              <Label fx:id="name" styleClass="cell_big_label" text="\$first" wrapText="true" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </HBox>
                        <FlowPane fx:id="tags" minWidth="100.0" prefWrapLength="200.0">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin></FlowPane>
                        <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" wrapText="true" />
                        <Label fx:id="address" styleClass="cell_small_label" text="\$address" wrapText="true" />
                        <Label fx:id="email" styleClass="cell_small_label" text="\$email" wrapText="true" />
                     </children>
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                  </VBox>
                  <HBox alignment="CENTER" GridPane.columnIndex="1">
                     <children>
                        <Separator orientation="VERTICAL" />
                     </children>
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                  </HBox>
                  <VBox spacing="5.0" GridPane.columnIndex="2">
                     <children>
                        <VBox fx:id="conditionHeaderPane" styleClass="cell_small_label_header_border">
                           <children>
                              <Label fx:id="conditionHeader" styleClass="cell_small_label_light" text="\$conditionheader" wrapText="true" />
                           </children>
                        </VBox>
                        <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="150.0" minHeight="20.0">
                           <content>
                              <VBox fx:id="conditionContainer" spacing="5.0" style="-fx-background-color: white;">
                                 <padding>
                                    <Insets bottom="0.0" left="5.0" right="5.0" top="0.0" />
                                 </padding>
                              </VBox>
                           </content>
                        </ScrollPane>
                        <VBox fx:id="medicationHeaderPane" styleClass="cell_small_label_header_border">
                           <children>
                              <Label fx:id="medicationHeader" styleClass="cell_small_label_light" text="\$medicationheader" wrapText="true" />
                           </children>
                        </VBox>
                        <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="150.0" minHeight="20.0">
                           <content>
                              <VBox fx:id="medicationContainer" spacing="5.0" style="-fx-background-color: white;">
                                 <padding>
                                    <Insets bottom="0.0" left="5.0" right="5.0" top="0.0" />
                                 </padding>
                              </VBox>
                           </content>
                        </ScrollPane>
                     </children>
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                  </VBox>
               </children>
            </GridPane>
            <Separator>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Separator>
            <GridPane>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <VBox fx:id="taskHeaderPane" styleClass="cell_small_label_header_border">
                           <children>
                              <Label fx:id="taskHeader" styleClass="cell_small_label_light" text="\$taskheader" wrapText="true" />
                           </children>
                        </VBox>
                        <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="400.0">
                           <content>
                              <VBox fx:id="taskContainer" spacing="5.0" style="-fx-background-color: white;">
                                 <padding>
                                    <Insets bottom="0.0" left="5.0" right="5.0" top="0.0" />
                                 </padding>
                              </VBox>
                           </content>
                        </ScrollPane>
                     </children>
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                  </VBox>
                  <VBox spacing="5.0" GridPane.columnIndex="1">
                     <children>
                        <VBox fx:id="remarkHeaderPane" styleClass="cell_small_label_header_border">
                           <children>
                              <Label fx:id="remarkHeader" styleClass="cell_small_label_light" text="\$remarkheader" wrapText="true" />
                           </children>
                        </VBox>
                        <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="400.0">
                           <content>
                              <VBox fx:id="remarkContainer" spacing="5.0" style="-fx-background-color: white;">
                                 <padding>
                                    <Insets bottom="0.0" left="5.0" right="5.0" top="0.0" />
                                 </padding>
                              </VBox>
                           </content>
                        </ScrollPane>
                     </children>
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                  </VBox>
               </children>
            </GridPane>
         </children>
      </VBox>
   </children>
</GridPane>
